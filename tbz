#!/bin/bash

PN="${BASH_SOURCE[0]##*/}"
PD="${BASH_SOURCE[0]%/*}"

source "${PD}/lib/die"

function usage() {
	cat <<EOF
Usage: ${PN} [Options] [Input path]
Options:
  -h       : show this help message
  -D <DIR> : set output dir

Default input path: "."
Default output dir: dirname of input path
EOF
	[ $# -gt 0 ] && { echo ; die "$@" ; } || exit 0
}

case "${PN}" in
t7z) type 7z >/dev/null || exit $? ;;
*) type tar >/dev/null || exit $? ;;
esac

opt="$(getopt -o hD: -- "$@")" || usage "Parse options failed"

eval set -- "${opt}"
while true ; do
	case "${1}" in
	-h) usage ;;
	-D) tdir="${2%%/}" ; shift 2 ;;
	--) shift ; break ;;
	*) die "Internal error!" ;;
	esac
done

src="$(readlink -f "${1:-.}")"
[ "${src}" == "/" ] && die "Input path cannot be '/'"

d="${src%/*}"
src="${src##*/}"

if [ "${PN}" == "t7z" ] ; then
	tar="${src}.7z"
else
	tar="${src}.tbz"
fi

if [ "${tdir}" ] ; then
	tar="${tdir}/${tar}"
else
	tar="${d}/${tar}"
fi

pushd "${d}" &>/dev/null

[ -e "${src}" ] || die "'${src}' not found"

echo "${PWD}"
if [ "${PN}" == "t7z" ] ; then
	7z a -m0=lzma -mx=9 -mfb=273 -md=32m "${tar}" "${src}"
else
	tar cjvpf "${tar}" "${src}"
fi
echo
echo "output: ${tar}"

popd &>/dev/null

